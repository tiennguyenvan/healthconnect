<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.appointment.AppointmentListActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/AppTheme">

        <LinearLayout style="@style/Header">
            <TextView android:id="@+id/btBackToMain" style="@style/H1" android:text="@string/appointments_list_header_text" />
            <TextView android:id="@+id/bt_ToAppointmentForm" style="@style/PrimaryTextMedium" android:text="@string/add_new" />
        </LinearLayout>

        <LinearLayout
            style="@style/Field"
            android:layout_height="match_parent">

            <com.example.healthconnect.views.SearchRecyclerView
                android:id="@+id/rvAppointmentList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>