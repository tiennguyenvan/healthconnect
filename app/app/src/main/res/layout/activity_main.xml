<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            style="@style/AppTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout style="@style/Header"
                android:id="@+id/llAppLogoHeader"
                >
                <ImageView
                    android:id="@+id/ivHeathConnectLogo"
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_marginTop="0.5sp"
                    android:src="@drawable/healthconnect_logo"
                    />
                <TextView
                    style="@style/H1"
                    android:text="@string/app_name" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btPatients"
                style="@style/Card"

                app:cardCornerRadius="@dimen/corner_radius"> <!-- require xmlns:app="http://schemas.android.com/apk/res-auto" -->
                <LinearLayout style="@style/CardInner">

                    <LinearLayout style="@style/CardHeader">

                        <TextView
                            style="@style/H2"
                            android:text="@string/patients" />

                        <TextView
                            android:id="@+id/tvPatientCount"
                            style="@style/PrimaryTextBold"
                            android:layout_height="match_parent"
                            android:text="@string/zero" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btAppointments"
                style="@style/Card"
                app:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout style="@style/CardInner">

                    <LinearLayout style="@style/CardHeader">

                        <TextView
                            style="@style/H2"
                            android:text="@string/appointments" />

                        <TextView
                            android:id="@+id/tvAppointmentCount"
                            style="@style/PrimaryTextBold"
                            android:text="0" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAppointmentLatest"
                        style="@style/CardBody"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btMedications"
                style="@style/Card"
                app:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout style="@style/CardInner">

                    <LinearLayout style="@style/CardHeader">

                        <TextView
                            style="@style/H2"
                            android:text="@string/medications" />

                        <TextView
                            android:id="@+id/tvMedicationCount"
                            style="@style/PrimaryTextBold"
                            android:text="@string/zero" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvMedicationEmpty"
                        style="@style/CardBody"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btDiagnoses"
                style="@style/Card"
                app:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout style="@style/CardInner">

                    <LinearLayout style="@style/CardHeader">

                        <TextView
                            style="@style/H2"
                            android:text="@string/diagnoses" />

                        <TextView
                            android:id="@+id/tvDiagnoseCount"
                            style="@style/PrimaryTextBold"
                            android:text="@string/zero" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btSymptoms"
                style="@style/Card"
                app:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout
                    style="@style/CardInner">

                    <LinearLayout style="@style/CardHeader">

                        <TextView
                            style="@style/H2"
                            android:text="@string/symptoms" />

                        <TextView
                            android:id="@+id/tvSymptomCount"
                            style="@style/PrimaryTextBold"
                            android:text="@string/zero" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btTreatments"
                style="@style/Card"
                app:cardCornerRadius="@dimen/corner_radius"
                >

                <LinearLayout
                    style="@style/CardInner">

                    <LinearLayout style="@style/CardHeader">

                        <TextView
