<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card"
    >

    <LinearLayout
        style="@style/CardInner">
        <TextView style="@style/CardRibbon"
            android:id="@+id/tvConsultationDateTime"
            android:text="@string/consultation_date_time"
            android:layout_marginBottom="@dimen/gap_x_small"
            />
        <LinearLayout
            style="@style/CardHeader">
            <TextView
                android:id="@+id/tvConsultationDiagnoses"
                android:text="@string/consultation_diagnoses"
                style="@style/H4"
                />

            <TextView style="@style/PrimaryTextSmall"
                android:text="@string/edit"
                android:visibility="gone"
                />

        </LinearLayout>
        <TextView style="@style/BodyTextSmall"
            android:layout_marginTop="@dimen/gap_x_small"
            android:id="@+id/tvConsultationSymptoms"
            android:text="@string/consultation_symptoms"
            />
        <TextView
            android:layout_marginTop="@dimen/gap_x_small"
            android:id="@+id/tvConsultationTreatments"
            android:text="@string/consultation_treatments"
            style="@style/BodyTextSmall"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>