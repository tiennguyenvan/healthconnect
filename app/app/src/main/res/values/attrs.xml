<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Use the common attributes in multiple styleable blocks -->
<!--    <attr name="exampleString" format="string" />-->
<!--    <attr name="exampleDimension" format="dimension" />-->
<!--    <attr name="exampleColor" format="color" />-->
<!--    <attr name="exampleDrawable" format="color|reference" />-->

    <declare-styleable name="InputAttrs">
        <attr name="labelText" format="string" />
        <attr name="hintText" format="string" />
        <attr name="inputType" format="enum">
            <enum name="text" value="0" />
            <enum name="number" value="1" />
            <enum name="date" value="2" />
            <enum name="time" value="3" />
            <enum name="pastDate" value="4" />
            <enum name="futureDate" value="5" />
        </attr>
        <attr name="displayDirection" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>


</resources>
